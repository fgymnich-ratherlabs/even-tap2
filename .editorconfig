# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Match files with a .md extension (Markdown files)
[*.md]
max_line_length = off
trim_trailing_whitespace = false

# Match JSON files
[*.json]
indent_style = space
indent_size = 2

# Match YAML files
[*.yml, *.yaml]
indent_style = space
indent_size = 2

# Match JavaScript, TypeScript, CSS, SCSS, HTML, and JSX files
[*.js, *.ts, *.css, *.scss, *.html, *.jsx, *.tsx]
indent_style = space
indent_size = 2

# Next.js specific files
[next.config.{js,mjs}]
indent_style = space
indent_size = 2
